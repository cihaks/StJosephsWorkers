
<% form_for([@client,@contact]) do |f| %>
  <%= f.error_messages %>

  <table>
  	<tr>
  	  <td>
    	<%= f.label :contact_type_id, "Type" %><br />
    	<%= f.collection_select(:contact_type_id, ContactType.all, :id, :name) %>
	  </td>
	  <td width="10"></td>
	  <td>
	    <%= f.label :contact_date, "Date" %><br />
	    <%= f.date_select :contact_date %>
	  </td>
	  <td width="10"></td>
	  <td>
	    <%= f.label :contact_negative, "Negative" %><br />
	    <%= f.check_box :contact_negative %>
	  </td>
	  <td>
		<%= f.label :alert, "Alert" %><br/>
		<%= f.check_box :alert %>
	  </td>
    </tr>
  </table>
  <p>
  	<%= f.label :note %><br />
	<%= f.text_area :note, :size=>"80x4" %>
  </p>
  <p>
    <%= f.submit 'Update'  unless request.xhr? %>
	<%= submit_to_remote 'update_ajax_btn', 'Update', :url=>{:action=>'update'} if request.xhr?%>
  </p>
<% end %>
