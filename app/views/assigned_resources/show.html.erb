
  <table>
  	<tr>
  	  <td valign="top">
		<table>
		  <tr>
			<td>
			  <b>Resource Date:</b>
			  <%=h @assigned_resource.resource_date.strftime("%m/%d/%Y") %>
			</td>
		  </tr>
		  <tr>
			<td>
			  <b>Resource Type:</b>
			  <%=h @assigned_resource.resource_type.name %>
			</td>
		  </tr>
		  <tr>
			<td>
			  <b>Amount:</b>
			  <%=h number_to_currency(@assigned_resource.amount, :precision=>0) %>
			</td>
		  </tr>
		  <tr>
			<td>
			  <b>Number:</b>
			  <%=h number_with_delimiter(@assigned_resource.number) %>
			</td>
		  </tr>
		  <tr>
			<td>
			  <b>Verified:</b>
			  <%= check_box_tag :verified, 'true', @assigned_resource.verified, :onclick=>"return false;" %>
			</td>
		  </tr>
		</table>
	  </td>
	  <td width="10"></td>
	  <td>
	    <b>Companies:</b><br/>
	    <div class="scrollable">
	  	  <% @assigned_resource.companies.each do |company| %>
		    <div>
		      <%= check_box_tag company.id,'true',company.id,:onclick=>"return false;" %>
		      <%= company.name %>
		    </div>
		  <% end %>
	    </div>
	  </td>
	  <td width="10"></td>
	  <td>
	    <b>Industries:</b><br/>
		<div class="scrollable">
		  <% @assigned_resource.industries.each do |industry| %>
			<div>
			  <%= check_box_tag industry.id, true, industry.id,:onclick=>"return false;" %>
			  <%= industry.name %>
			</div>
		  <% end %>
		</div>
	  </td>
	</tr>
  </table>
