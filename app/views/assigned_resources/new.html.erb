<%= render 'assigned_resources/banner' %>

<% form_for([@client, @assigned_resource], :builder=>LabelingFormBuilder) do |f| %>
  <%= f.error_messages %>
  
  <%= render :partial=>'assigned_resources/form', :locals=>{:f=>f}%>

  <table>
	<tr>
	  <td>
    	<%= f.submit 'Create' unless request.xhr? %>
		<%= submit_to_remote 'create_ajax_btn', 'Create', :url=>{:action=>'create'}, :html=>{:onclick=>"if (!check_resource_form()) return;"} if request.xhr? %>
	  </td>
    </tr>
  </table>
<% end %>

