
<table>
  <tr>
    <td class="fieldLabel">Company</td>
	<td width="10"></td>
    <td class="fieldLabel">Interview date</td>
	<td width="10"></td>
  </tr>

<% @client.job_interviews.each do |job_interview| %>
  <tr>
    <td class="fieldData"><%=h job_interview.company.name unless job_interview.company.nil? %></td>
	<td width="10"></td>
    <td class="fieldData"><%=h job_interview.interview_date.strftime("%m/%d/%Y") unless job_interview.interview_date.nil? %></td>
	<td width="10"></td>
    <td><%= link_to_remote 'Details', :url=>client_job_interview_path(@client,job_interview), :update=>'jobs-content', :method=>:get %></td>
    <td><%= link_to_remote 'Edit', :url=>edit_client_job_interview_path(@client, job_interview), :update=>'jobs-content', :method=>:get %></td>
    <td><%= link_to_remote 'Destroy', :url=>client_job_interview_path(@client, job_interview), :update=>'jobs-content', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% if @client.job_interviews.empty? %>
  <tr>
  	<td colspan="5" class="fieldData">No Job Interviews</td>
  </tr>
<% end %>
</table>

