
<% form_for([@client,@job_interview]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :company %><br />
    <%= f.collection_select(:company_id, Company.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :interview_date, 'Interview Date' %><br />
    <%= f.date_select :interview_date %>
  </p>
  <p>
    <%= f.submit 'Create' unless request.xhr? %>
	<%= submit_to_remote 'update_ajax_btn', 'Create', :url=>{:action=>'create'}, :update=>'jobs-content' if request.xhr?%>
  </p>
<% end %>

<br/>