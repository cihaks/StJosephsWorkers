<div class="banner" id="client-header">
	<div class="caption"><%=h @client.id%>.&nbsp;&nbsp;<%=h @client.name %></div>
	<div class="links">
		<%= link_to_remote 'edit', :url=>edit_client_path(@client), :update=>'client-content', :method=>'get' %>
	</div>
	<div class="icons">
		<%= render :partial=>'clients/client_icons', :locals=>{:client=>@client} %>
	</div>
	<div class="icons" style="float:right;" id="client_status">
		<% @client.status_types.each do |status_type| %>
		  <%= status_type.name %>
		<% end %>
	</div>
</div>
